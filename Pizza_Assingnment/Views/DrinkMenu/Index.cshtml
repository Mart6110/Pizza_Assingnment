@model IEnumerable<Pizza_Assingnment.Models.DrinkMenu>

@{
    ViewData["Title"] = "Menu";
}

<section class="MenuSection">
    <h1>Menu - Drikkevare</h1>

    <div class="MenuOption">
        <div>
            <a asp-area="" asp-controller="PizzaMenu" asp-action="Index">Pizza</a>
            <a class="active" asp-area="" asp-controller="DrinkMenu" asp-action="Index">Drikkevare</a>
        </div>
        <input type="text" id="searchInput" onkeyup="searchFunction()" placeholder="Søg" />
    </div>


<table class="table" id="table">
    <thead>
        <tr class="header">
            <th>
                Navn
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                Priser
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size) cl
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
        </tr>
}
    </tbody>
</table>
</section>
